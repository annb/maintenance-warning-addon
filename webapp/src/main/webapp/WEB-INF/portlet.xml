<portlet-app version="1.0" xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">

  <!-- AddOn Portlet -->
  <portlet>
    <description xml:lang="EN">Calendar Reminder Portlet</description>
    <portlet-name>CalendarReminderPortlet</portlet-name>
    <display-name xml:lang="EN">Calendar Reminder Portlet</display-name>
    <portlet-class>org.exoplatform.webui.application.portlet.PortletApplicationController</portlet-class>    
    <init-param>
      <name>webui.configuration</name>
      <value>/WEB-INF/conf/portlet/AddOn/configuration.xml</value>
    </init-param>
    <expiration-cache>0</expiration-cache>
    <supports>
      <mime-type>text/html</mime-type>
    </supports>
    <supported-locale>en</supported-locale>
    <resource-bundle>locale.portlet.addon.AddOnReminderPortlet</resource-bundle>
    <portlet-info>
      <title>Calendar Reminder Portlet</title>
      <short-title>Calendar Reminder Portlet</short-title>  
      <keywords>calendar-reminder-webapp</keywords>
    </portlet-info>
  </portlet>  

</portlet-app>
